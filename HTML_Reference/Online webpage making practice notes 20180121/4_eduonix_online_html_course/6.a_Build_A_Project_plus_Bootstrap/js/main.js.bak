$(document).ready(function(){
  $('#add-task-form').on('submit', function(e){
    addTask(e);
    alert('or, we got to this part');
  });

  displayTasks();

  // Function to display Tasks
  function displayTasks(){
    var taskList= JSON.parse(localStorage.getItem("tasks"));

    // Sort Tasks by time
    if(taskList != null){
      taskList = taskList.sort(sortByTime);
    }

    // Set Counter
    var i = 0;
    // Check Tasks
    if(localStorage.getItem('tasks') != null ){
      // Loop thought and displayTasks
      $.each(taskList, function(key, value){
        $('#task-table').append( '<tr id="'+ value.id +'"> ' +
                                  '<td>' + value.task + '</td>' +
                                  '<td>' + value.task_priority + '</td>' +
                                  '<td>' + value.task_date + '</td>' +
                                  '<td>' + value.task_time + '</td>'
                                  '<td><a href="edit.html?id='+ value.id +'">Edit</a> | <a href="#" id="remove-task" data-id"'+ value.id'">Remove</a></td>' + '</tr>');
      }) // end of $.each...
    } // end of if(localStorage...
  }  // end of function displayTasks()...

  // Function to sort Tasks
  function sortByTime(a, b) {
    var aTime = a.task_time;
    var bTime = b.task_time;
    return((aTime < bTime) ? -1 : ((aTime > bTime) ? 1 : 0 ));
  }

  // Function to add a Task
  function addTask(e){
      // Add a unique ID
      var newDate = new Date();
      id = newDate.getTime();

      var task = $('#task').val();
      var task_priority = $('#priority').val();
      var task_date = $('#date').val();
      var task_time = $('#time').val();

      // Simple Validation
      if(task == ''){
        alert('Task is required');
        e.preventDefault();
      } else if(task_date == ''){
          alert('Date is required');
          e.preventDefault();
      } else if(task_time == ''){
          alert('Time is required');
          e.preventDefault();
      } else if(task_priority == ''){
          task_priority = 'normal';
      } else {
        tasks = JSON.parse(localStorage.getItem('tasks'));

        //Check tasks
        if(tasks == null){
          tasks = [];
        }

        var taskList = JSON.parse(localStorage.getItem('tasks'));

        // New Task Object
        var new_task = {
          "id": id,
          "task": task,
          "task_priority": task_priority,
          "task_date": task_date,
          "task_time": task_time
        }

        tasks.push(new_task);
        localStorage.setItem('tasks', JSON.stringify(tasks));

        console.log('Task Added');


      } // end of big if then else - if(task ==...

  }  // end of addTask()...

});
